.site-login
  width 400px
  display none
  margin 0 auto
  margin-top 8px
  margin-bottom 2%
  transition opacity 1s
  -webkit-transition opacity 1s

.site-login .triangle
  width 0
  border-top 12x solid transparent
  border-right 12px solid transparent
  border-bottom 12px solid #3399cc
  border-left 12px solid transparent
  margin 0 auto

.site-login h1
  background #3399cc
  padding 20px 0
  font-size 140%
  font-weight 300
  text-align center
  color #fff

.site-login form
  background #f0f0f0
  padding 6% 4%

.site-login
  input[type="email"], input[type="password"]
    width 100%
    background #fff
    margin-bottom 4%
    border 1px solid #ccc
    padding 4%
    font-family 'Open Sans',sans-serif
    font-size 95%
    color #555

.site-login
  input[type="submit"]
    width 100%
    background #3399cc
    border 0
    padding 4%
    font-family 'Open Sans',sans-serif
    font-size 100%
    color #fff
    cursor pointer
    transition background .3s
    -webkit-transition background .3s

.site-login
  input[type="submit"] hover
    background #2288bb
